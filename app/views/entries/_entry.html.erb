<li id="entry-<%= entry.id %>">
  <%= link_to gravatar_for(entry.user, size: Settings.user.size_gravatar_all), entry.user %>
  <span class="user"><%= link_to entry.user.name, entry.user %></span>
  <span class="content">
    <%= entry.content %>
    <%= image_tag entry.picture.url if entry.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %><%= time_ago_in_words(entry.created_at) %><%= t ".ago" %>
    <% if current_user? entry.user %>
      <%= link_to t(".btn_delete"), entry, method: :delete,
        data: { confirm: t(".btn_confirm") } %>
    <% end %>
  </span>
</li>


  <div class="row">
  <div class = "col-md-2">
  </div>
  <div class="col-md-1">
    <div>
      <%= gravatar_for comment.user, size: Settings.user.size_gravatar_all %>
    </div><!-- /thumbnail -->
  </div><!-- /col-sm-1 -->

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= comment.user.name %></strong> <span class="text-muted">commented <%= time_ago_in_words(comment.created_at) %> ago</span>
      </div>
      <div class="panel-body">
        <%= comment.content%>
      </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->
  </div><!-- /col-sm-5 -->
</div><!-- /row -->
